---
import BaseLayout from '../layouts/BaseLayout.astro';
import Card from '../components/Card.astro';
---
<BaseLayout>
    <main class="w-[90%] max-w-6xl mx-auto flex flex-col lg:flex-row lg:gap-16 items-center my-10 lg:my-20">
        <div class="hidden lg:block lg:w-max lg:h-max lg:rotate-[-90deg] md:-mx-20">
            <h2 class="text-5xl font-bold">Hogwarts</h2>
            <h3 class="text-lg uppercase lg:text-right">houses</h3>
        </div>
        <section class="">
            <div class="grid md:grid-cols-2 gap-6 lg:gap-x-8 lg:gap-y-10 col-span-8">
                <Card/>
                <Card/>
                <Card/>
                <Card/>
            </div>
        </section>
    </main>
</BaseLayout>